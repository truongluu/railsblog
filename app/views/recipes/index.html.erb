<h1>All Recipes</h1>
<hr/>
<% @recipes.each do |recipe| %>
<div class="row">
	<div class="col-md-2">
		<div class="chef_info">
			<%= gravatar_for( recipe.chef ) %>
		</div>
	</div>
	<div class="col-md-8 well">
		<h4><%= link_to recipe.name, "" %></h4>
		<p>
			<%= recipe.summary %>
		</p>
		<p>
			<span class="quite"><small><%= time_ago_in_words( recipe.created_at ) %> ago</small></span>
		</p>
	</div>
</div>
<% end %>